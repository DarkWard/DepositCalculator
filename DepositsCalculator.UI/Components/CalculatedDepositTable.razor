<div class="deposit-table scroll">
    <table class="table table-sm table-bordered m-2">
        <thead>
            <tr>
                <th style="width:40%">Month</th>
                <th style="width:20%">%</th>
                <th style="width:40%">Sum</th>
            </tr>
        </thead>
        @if (CalculatedInterestsList.Data != null)
        {
            <tbody>
                @foreach (MonthlyDepositPaymentViewModel payment in CalculatedInterestsList.Data)
                {
                    <tr>
                        <td>@payment.MonthNumber</td>
                        <td>@payment.Percents</td>
                        <td>@payment.TotalBalance</td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>
